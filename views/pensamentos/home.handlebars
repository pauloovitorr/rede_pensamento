<div class="home">
    <h1>Todos os Pensamentos</h1>
    <form action="/" method="get">
        <input type="text" name="pesquisar" placeholder="EstÃ¡ buscando por algo ?">
        <button type="submit" class="btn" value="Buscar"> Buscar </button>
    </form>

    <div class="order-container">
    <span>Ordenar por:</span>
    <form action="/" method="get">
        <input type="hidden" name="pesquisar" value="{{this.pesquisar}}">
        <input type="hidden" name="order" value="new">
        <button type="submit"><i class="bi bi-arrow-up"></i></button>
    </form>

    <form action="/" method="get">
        <input type="hidden" name="pesquisar" value="{{this.pesquisar}}">
        <input type="hidden" name="order" value="old">
        <button type="submit"><i class="bi bi-arrow-down"></i></button>
    </form>

    <a href="/">Limpar</a>
</div>
</div>



<div class="pensamento_container">
    {{#each PensamentosDate}}

    <figure>
        <blockquote>
            "{{this.titulo}}"
        </blockquote>

    <figcaption>
        por <span>{{this.User.nome}}</span>
    </figcaption>
    </figure>

    {{/each}}
</div>